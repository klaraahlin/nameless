name = nameless
description = Starting point for development and to allow a clean output of content
core = 7.x

;-------------------- C S S -----------------------
; We include one "editor" stylesheet that contains
; resets and normalizations as well as styles used
; by editors such as typography and styles for use
; in a WYSIWYG editor.
;
; All other styles will be placed in the styles
; file. This will include styles for layout, page
; elements, features and print overrides.

stylesheets[all][] = css/layout.css
stylesheets[all][] = css/editor.css
stylesheets[all][] = css/style.css
stylesheets[print][] = css/print.css

;--------------------- J S ------------------------

scripts[] = libraries/respond/respond.src.js
scripts[] = libraries/formalize/assets/js/jquery.formalize.legacy.js
scripts[] = js/nameless.js

;---------------- R E G I O N S -------------------

regions[page_top] = Page top
regions[page_bottom] = Page bottom
regions[help] = Help

regions[header] = Header
regions[navigation] = Navigation
regions[highlighted] = Highlighted

regions[content] = Content
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second

regions[footer] = Footer
